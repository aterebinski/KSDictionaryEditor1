<Window x:Class="KSDictionaryEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSDictionaryEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1800">
    <StackPanel>
        <Grid x:Name="Main" Margin="30" HorizontalAlignment="Stretch"
>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock Foreground="Red" FontWeight="Bold">Pracownicy:</TextBlock>
                <TextBlock FontWeight="Bold" Foreground="Red">Słownik, usługa, wzorzec:
                </TextBlock>
                <TextBlock FontWeight="Bold">Usługa: RTG Klatki piersiowej</TextBlock>
                <TextBlock FontWeight="Bold">Wzorzec: RTG Klatki piersiowej</TextBlock>
                <TextBlock Foreground="Red" FontWeight="Bold">Pozycje słownika:</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1">
                <TabControl x:Name="tabControl" Height="644" Margin="0,0,-0.4,0">
                    <TabItem Header="Pracownicy">
                        <DockPanel>
                            <ListView x:Name="Personel_Left" SelectionMode="Extended" 
                                SelectionChanged="Personel_Left_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridView.ColumnHeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground" Value="Red" />
                                            </Style>
                                        </GridView.ColumnHeaderContainerStyle>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=ID}"
                                                Width="30" />
                                            <GridViewColumn Header="Imie"  DisplayMemberBinding="{Binding Path=IMIE}" 
                                                Width="120" />
                                            <GridViewColumn Header="Nazwisko"  DisplayMemberBinding="{Binding Path=NAZW}" 
                                                Width="220"/>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WrapPanel>
                                <CheckBox x:Name="SharedDictionaries_Left" Content="Wspólne" Click="SharedDictionaries_Left_Click" 
                              Margin="10"/>
                                <Button x:Name="AllPersonel_Left" Content="Zaznacz wszystkich" Click="AllPersonel_Left_Click" 
                            Margin="10"/>
                                <Button x:Name="ClearPersonel_Left" Content="Odznacz wszystkich" Click="ClearPersonel_Left_Click" 
                            Margin="10"/>
                            </WrapPanel>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Usługi i wzorce">
                        <StackPanel>
                            <ListView x:Name="Dictonaries_Left"
                          Height="613" SelectionChanged="Dictonaries_Left_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Słownik" DisplayMemberBinding="{Binding Path=SLOWNIK}"/>
                                            <GridViewColumn Header="Wzorzec" DisplayMemberBinding="{Binding Path=WZORZEC}"/>
                                            <GridViewColumn Header="Usługa" DisplayMemberBinding="{Binding Path=USLUGA}" />
                                            <GridViewColumn Header="Pracownik" DisplayMemberBinding="{Binding Path=PRACOWNIK}" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Słowniki">
                        <Grid Background="#FFE5E5E5"/>
                    </TabItem>
                    <TabItem Header="Pozycje słowników">
                        <StackPanel>
                            <ListView x:Name="Items_Left" Height="534" Panel.ZIndex="-3">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding}" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WrapPanel>
                                <Button Content="Zaznacz wszystko" 
                            Margin="10"/>
                                <Button Content="Odznacz wszystko" 
                            Margin="10"/>
                            </WrapPanel>
                            <WrapPanel>
                                <Button Content="Dodaj pozycję" 
                            Margin="10" Click="Button_Click"/>
                                <Button Content="Popraw pozycję" 
                            Margin="10"/>
                                <Button Content="Usuń pozycje" 
                            Margin="10"/>
                            </WrapPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>


            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
