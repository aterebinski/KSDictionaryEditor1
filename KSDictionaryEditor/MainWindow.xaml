    </Window.Resources>
    <StackPanel Margin="0,0,-0.4,-19.6">
        <Grid x:Name="Main" Margin="30" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="29*" />
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="600" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FF973030">Set 1:</TextBlock>
                
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,0">
                <WrapPanel>
                    <TextBlock Foreground="Red" FontWeight="Bold" Margin="0,0,10,5">Pracownik:</TextBlock>
                    <TextBlock Foreground="Red" FontWeight="Bold" x:Name="Personel_SmallPanel_TextBlock" Margin="0,0,0,5"></TextBlock>
                </WrapPanel>

                <ComboBox Margin="0,0,0,5" 
                    x:Name="Personel_SmallPanel" 
                  SelectionChanged="Personel_SmallPanel_SelectionChanged">

                </ComboBox>
                <WrapPanel Margin="0,0,0,5">
                    <CheckBox  x:Name="SharedDictionaries_SmallPanel" Click="SharedDictionaries_SmallPanel_Click" />
                    <TextBlock Text="Wspólne słowniki" Margin="5,0,0,0" />
                </WrapPanel>
                <TextBlock Margin="0,15,0,5" Foreground="Red" FontWeight="Bold">Słowniki:</TextBlock>
                <WrapPanel>
                    <ComboBox x:Name="FiltrDictionarySmallPanelCombobox" Margin="5">
                        <ComboBox.Items>
                            <ComboBoxItem IsSelected="True" >Wszystko</ComboBoxItem>
                            <ComboBoxItem>Słownik</ComboBoxItem>
                            <ComboBoxItem>Wzorzec</ComboBoxItem>
                            <ComboBoxItem>Usługa</ComboBoxItem>

                        </ComboBox.Items>
                    </ComboBox>
                    <TextBox x:Name="FiltrDictionarySmallPanelTextBox" Margin="5" Width="250" KeyDown="FilterSmallPanelKeyPressed"></TextBox>
                    <Button x:Name="FiltrDictionarySmallPanelButton" Margin="5" Click="FiltrDictionarySmallPanelButton_Click">Filtruj</Button>
                </WrapPanel>
                <ListView x:Name="Dictionaries_SmallPanel" Height="350" SelectionChanged="Dictionaries_SmallPanel_SelectionChanged" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Width="100" Header="Słownik" DisplayMemberBinding="{Binding Path=SLOWNIK}"/>
                                <GridViewColumn Width="100" Header="Wzorzec" DisplayMemberBinding="{Binding Path=WZORZEC}"/>
                                <GridViewColumn Width="100" Header="Usługa" DisplayMemberBinding="{Binding Path=USLUGA}" />
                                <GridViewColumn Width="100" Header="Pracownik" DisplayMemberBinding="{Binding Path=PRACOWNIK}" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <WrapPanel>
                    <Button x:Name="SmallPanelSelectAllButton_Old" Content="Zaznacz wszystko" 
                            Margin="10" Click="SmallPanelSelectAllButton_Click"/>
                    <Button x:Name="SmallPanelUnSelectAllButton_Old" Content="Odznacz wszystko" 
                            Margin="10" Click="SmallPanelUnSelectAllButton_Click"/>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="SmallPanelAddElementButton_Old" Content="Dodaj pozycję" 
                            Margin="10" />
                    <Button x:Name="SmallPanelEditElementButton_Old" Content="Popraw pozycję" 
                            Margin="10"/>
                    <Button x:Name="SmallPanelRemoveElementButton_Old" Content="Usuń pozycje" 
                            Margin="10"/>
                </WrapPanel>
            </StackPanel>
            
            <StackPanel Grid.Column="0" Grid.Row="2">
                <WrapPanel>
                    <Button x:Name="BigPanel_CopyDictionary_ToLayout" 
                            Content="Kopiuj słowniki do innego wzorca>>" 
                            Background="#FFE0E0E0" 
                            BorderBrush="#FFE81A1A" 
                            Foreground="#FFD60909" 
                            FontSize="20" 
                            Padding="5" 
                            Margin="0,0,20,0"
                            Click="BigPanel_CopyDictionary_Click"/>
                    <Button x:Name="BigPanel_CopyDictionary_ToPersonel" 
                            Content="Kopiuj słowniki do innego personelu >>" 
                            BorderBrush="#FF331AE8" 
                            Foreground="#FF3109D6" 
                            FontSize="20" 
                            Padding="5" Click="BigPanel_CopyDictionary_Click"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                <TextBlock Margin="0,0,0,5" Foreground="Red" FontWeight="Bold">Pozycje Słowników:</TextBlock>
                <ListView x:Name="Items_SmallPanel" Height="469" Margin="0,0,-0.2,0" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Element" Width="320" DisplayMemberBinding="{Binding}" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <WrapPanel>
                    <Button x:Name="SmallPanelSelectAllButton" Content="Zaznacz wszystko" 
                            Margin="10" Click="SmallPanelSelectAllButton_Click"/>
                    <Button x:Name="SmallPanelUnSelectAllButton" Content="Odznacz wszystko" 
                            Margin="10" Click="SmallPanelUnSelectAllButton_Click"/>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="SmallPanelAddElementButton" Content="Dodaj pozycję" 
                            Margin="10" Click="BigPanelAddElementButton_Click"/>
                    <Button x:Name="SmallPanelEditElementButton" Content="Popraw pozycję" 
                            Margin="10"/>
                    <Button x:Name="SmallPanelRemoveElementButton" Content="Usuń pozycje" 
                            Margin="10"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="2">
                <WrapPanel>
                    <Button x:Name="BigPanel_CopyElement" Content="Kopiuj Pozycje Słownika >>" Background="#FFE0E0E0" BorderBrush="#FFE81A1A" Foreground="#FFD60909" FontSize="20" Margin="5" Padding="5"/>
                </WrapPanel>
            </StackPanel>
            <Grid Grid.Column="2" Grid.Row="1">
                <Button x:Name="SwitchSidesButton" Background="White" Width="60" Height="56" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SwitchSidesButton_Click">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="56" Source="{StaticResource SmallPanel_Arrow}" />
                </Button>
            </Grid>
            <StackPanel Grid.Column="3" Grid.Row="0">
                <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FF973030">Set 2:</TextBlock>
                <WrapPanel>
                    <TextBlock Foreground="Red" FontWeight="Bold">Pracownicy:</TextBlock>
                    <TextBlock Foreground="Red" FontWeight="Bold" x:Name="Personel_BigPanel_TextBlock" Margin="0,0,0,5"></TextBlock>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="1">
                <TabControl x:Name="tabControl" Height="586" Margin="0,0,-0.4,0">
                    <TabItem Header="Pracownicy">
                        <DockPanel>
                            <ListView x:Name="Personel_BigPanel" 
                                SelectionChanged="Personel_BigPanel_SelectionChanged" Width="423" Margin="0,0,0,9.6">
                                <ListView.View>
                                    <GridView>
                                        <GridView.ColumnHeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground" Value="Red" />
                                            </Style>
                                        </GridView.ColumnHeaderContainerStyle>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=ID}"
                                                Width="30" />
                                            <GridViewColumn Header="Imie"  DisplayMemberBinding="{Binding IMIE}" 
                                                Width="120" />
                                            <GridViewColumn Header="Nazwisko"  DisplayMemberBinding="{Binding NAZW}" 
                                                Width="220"/>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WrapPanel>
                                <CheckBox x:Name="SharedDictionaries_BigPanel" Content="Wspólne słowniki całego personelu" Click="SharedDictionaries_BigPanel_Click" 
                              Margin="10"/>
                                <Button x:Name="AllPersonel_BigPanel" Content="Zaznacz wszystkich" Click="AllPersonel_BigPanel_Click" 
                            Margin="10"/>
                                <Button x:Name="ClearPersonel_BigPanel" Content="Odznacz wszystkich" Click="ClearPersonel_BigPanel_Click" 
                            Margin="10"/>
                            </WrapPanel>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Słowniki">
                        <StackPanel>
                            <WrapPanel>
                                <ComboBox x:Name="FiltrDictionaryBigPanelCombobox" Margin="5">
                                    <ComboBox.Items>
                                        <ComboBoxItem IsSelected="True" >Wszystko</ComboBoxItem>
                                        <ComboBoxItem>Słownik</ComboBoxItem>
                                        <ComboBoxItem>Wzorzec</ComboBoxItem>
                                        <ComboBoxItem>Usługa</ComboBoxItem>
                                    </ComboBox.Items>
                                </ComboBox>
                                <TextBox x:Name="FiltrDictionaryBigPanelTextBox" Margin="5" Width="400" KeyDown="FilterBigPanelKeyPressed"></TextBox>
                                <Button x:Name="FiltrDictionaryBigPanelButton" Margin="5" Click="FiltrDictionaryBigPanelButton_Click">Filtruj</Button>
                            </WrapPanel>
                            <ListView x:Name="Dictionaries_BigPanel"
                          Height="613" SelectionChanged="Dictionaries_BigPanel_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Width="180" Header="Słownik" DisplayMemberBinding="{Binding Path=SLOWNIK}"/>
                                            <GridViewColumn Width="120" Header="Wzorzec" DisplayMemberBinding="{Binding Path=WZORZEC}"/>
                                            <GridViewColumn Width="150" Header="Usługa" DisplayMemberBinding="{Binding Path=USLUGA}" />
                                            <GridViewColumn Width="150" Header="Pracownik" DisplayMemberBinding="{Binding Path=PRACOWNIK}" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Pozycje słowników">
                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                            <TextBlock Margin="0,0,0,5">Pozycje Słowników:</TextBlock>
                            <ListView x:Name="Items_BigPanel" Height="469" Margin="0,0,-0.2,0" >
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Element" Width="320" DisplayMemberBinding="{Binding}" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WrapPanel>
                                <Button x:Name="BigPanelSelectAllButton" Content="Zaznacz wszystko" 
                            Margin="10" Click="BigPanelSelectAllButton_Click"/>
                                <Button x:Name="BigPanelUnSelectAllButton" Content="Odznacz wszystko" 
                            Margin="10" Click="BigPanelUnSelectAllButton_Click"/>
                            </WrapPanel>
                            <WrapPanel>
                                <Button x:Name="BigPanelAddElementButton" Content="Dodaj pozycję" 
                            Margin="10" Click="BigPanelAddElementButton_Click"/>
                                <Button x:Name="BigPanelEditElementButton" Content="Popraw pozycję" 
                            Margin="10"/>
                                <Button x:Name="BigPanelRemoveElementButton" Content="Usuń pozycje" 
                            Margin="10"/>
                            </WrapPanel>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="2">
                <WrapPanel>
                    <Button x:Name="SmallPanel_CopyDictionary" Content=" &lt;&lt; Kopiuj Słownik" Background="#FFE0E0E0" BorderBrush="#FFE81A1A" Foreground="#FFD60909" FontSize="20" Margin="5" Padding="5" Click="SmallPanel_CopyDictionary_Click" />
                    <Button x:Name="SmallPanel_CopyElement" Content=" &lt;&lt; Kopiuj Pozycje Słownika" Background="#FFE0E0E0" BorderBrush="#FFE81A1A" Foreground="#FFD60909" FontSize="20" Margin="5" Padding="5" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
