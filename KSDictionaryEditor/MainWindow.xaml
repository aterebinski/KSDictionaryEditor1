    </Window.Resources>
    <StackPanel Margin="0,0,-0.4,-19.6">
        <Grid x:Name="Main" Margin="30" HorizontalAlignment="Stretch"
>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43*" />
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="29*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="600" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FF973030">Set 1:</TextBlock>
                <WrapPanel>
                    <TextBlock Foreground="Red" FontWeight="Bold">Pracownicy:</TextBlock>
                    <TextBlock Foreground="Red" FontWeight="Bold" x:Name="Personel_Left_TextBlock" Margin="0,0,0,5"></TextBlock>
                </WrapPanel>

            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1">
                <TabControl x:Name="tabControl" Height="586" Margin="0,0,-0.4,0">
                    <TabItem Header="Pracownicy">
                        <DockPanel>
                            <ListView x:Name="Personel_Left" SelectionMode="Extended" 
                                SelectionChanged="Personel_Left_SelectionChanged" Width="423" Margin="0,0,0,9.6">
                                <ListView.View>
                                    <GridView>
                                        <GridView.ColumnHeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground" Value="Red" />
                                            </Style>
                                        </GridView.ColumnHeaderContainerStyle>
                                        <GridView.Columns>
                                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=ID}"
                                                Width="30" />
                                            <GridViewColumn Header="Imie"  DisplayMemberBinding="{Binding Path=IMIE}" 
                                                Width="120" />
                                            <GridViewColumn Header="Nazwisko"  DisplayMemberBinding="{Binding Path=NAZW}" 
                                                Width="220"/>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WrapPanel>
                                <CheckBox x:Name="SharedDictionaries_Left" Content="Wspólne słowniki całego personelu" Click="SharedDictionaries_Left_Click" 
                              Margin="10"/>
                                <Button x:Name="AllPersonel_Left" Content="Zaznacz wszystkich" Click="AllPersonel_Left_Click" 
                            Margin="10"/>
                                <Button x:Name="ClearPersonel_Left" Content="Odznacz wszystkich" Click="ClearPersonel_Left_Click" 
                            Margin="10"/>
                            </WrapPanel>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Usługi i wzorce">
                        <StackPanel>
                            <WrapPanel>
                                <ComboBox x:Name="FiltrDictionarySet1Combobox" Margin="5">
                                    <ComboBox.Items>
                                        <ComboBoxItem IsSelected="True" >Wszystko</ComboBoxItem>
                                        <ComboBoxItem>Słownik</ComboBoxItem>
                                        <ComboBoxItem>Wzorzec</ComboBoxItem>
                                        <ComboBoxItem>Usługa</ComboBoxItem>
                                        
                                    </ComboBox.Items>
                                </ComboBox>
                                <TextBox x:Name="FiltrDictionarySet1TextBox" Margin="5" Width="400" KeyDown="FilterSet1KeyPressed"></TextBox>
                                <Button x:Name="FiltrDictionarySet1Button" Margin="5" Click="FiltrDictionarySet1Button_Click">Filtruj</Button>
                            </WrapPanel>
                            <ListView x:Name="Dictionaries_Left"
                          Height="613" SelectionChanged="Dictionaries_Left_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Width="180" Header="Słownik" DisplayMemberBinding="{Binding Path=SLOWNIK}"/>
                                            <GridViewColumn Width="120" Header="Wzorzec" DisplayMemberBinding="{Binding Path=WZORZEC}"/>
                                            <GridViewColumn Width="150" Header="Usługa" DisplayMemberBinding="{Binding Path=USLUGA}" />
                                            <GridViewColumn Width="150" Header="Pracownik" DisplayMemberBinding="{Binding Path=PRACOWNIK}" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </TabItem>

                </TabControl>


            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="2">
                <WrapPanel>
                    <Button Content="Kopiuj Słownik >>" Background="#FFE0E0E0" BorderBrush="#FFE81A1A" Foreground="#FFD60909" FontSize="24" />
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                <TextBlock Margin="0,0,0,5">Pozycje Słowników:</TextBlock>
                <ListView x:Name="Items_Left" Height="469" Margin="0,0,-0.2,0" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Element" Width="320" DisplayMemberBinding="{Binding}" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <WrapPanel>
                    <Button x:Name="Set1SelectAllButton" Content="Zaznacz wszystko" 
                            Margin="10" Click="Set1SelectAllButton_Click"/>
                    <Button x:Name="Set1UnSelectAllButton" Content="Odznacz wszystko" 
                            Margin="10" Click="Set1UnSelectAllButton_Click"/>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="Set1AddElementButton" Content="Dodaj pozycję" 
                            Margin="10" Click="Set1AddElementButton_Click"/>
                    <Button x:Name="Set1EditElementButton" Content="Popraw pozycję" 
                            Margin="10"/>
                    <Button x:Name="Set1RemoveElementButton" Content="Usuń pozycje" 
                            Margin="10"/>
                </WrapPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="2">
                <WrapPanel>
                    <Button Margin="5" Content="Kopiuj Pozycje słownika >>" />
                </WrapPanel>
            </StackPanel>

            <Grid Grid.Column="2" Grid.Row="1">
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="56" Source="{StaticResource Right_Arrow}" />
            </Grid>

            <StackPanel Grid.Column="3" Grid.Row="0">
                <TextBlock FontSize="36" FontWeight="Bold" Foreground="#FF973030"><Run Text="S"/><Run Language="pl-pl" Text="et"/><Run Text=" "/><Run Language="pl-pl" Text="2"/><Run Text=":"/></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="3" Grid.Row="1" Margin="0,0,0,0">
                <WrapPanel>
                    <TextBlock Foreground="Red" FontWeight="Bold" Margin="0,0,10,5">Pracownik:</TextBlock>
                    <TextBlock Foreground="Red" FontWeight="Bold" x:Name="Personel_Right_TextBlock" Margin="0,0,0,5"></TextBlock>
                </WrapPanel>

                <ComboBox Margin="0,0,0,5" 
                    x:Name="Personel_Right" 
                  SelectionChanged="Personel_Right_SelectionChanged">

                </ComboBox>
                <WrapPanel Margin="0,0,0,5">
                    <CheckBox  x:Name="SharedDictionaries_Right" Click="SharedDictionaries_Right_Click" />
                    <TextBlock Text="Wspólne słowniki" Margin="5,0,0,0" />
                </WrapPanel>
                <TextBlock Margin="0,15,0,5" Foreground="Red" FontWeight="Bold">Słowniki:</TextBlock>
                <WrapPanel>
                    <ComboBox x:Name="FiltrDictionarySet2Combobox" Margin="5">
                        <ComboBox.Items>
                            <ComboBoxItem IsSelected="True" >Wszystko</ComboBoxItem>
                            <ComboBoxItem>Słownik</ComboBoxItem>
                            <ComboBoxItem>Wzorzec</ComboBoxItem>
                            <ComboBoxItem>Usługa</ComboBoxItem>

                        </ComboBox.Items>
                    </ComboBox>
                    <TextBox x:Name="FiltrDictionarySet2TextBox" Margin="5" Width="250" KeyDown="FilterSet2KeyPressed"></TextBox>
                    <Button x:Name="FiltrDictionarySet2Button" Margin="5" Click="FiltrDictionarySet2Button_Click">Filtruj</Button>
                </WrapPanel>
                <ListView x:Name="Dictionaries_Right" Height="190" SelectionChanged="Dictionaries_Right_SelectionChanged" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Width="100" Header="Słownik" DisplayMemberBinding="{Binding Path=SLOWNIK}"/>
                                <GridViewColumn Width="100" Header="Wzorzec" DisplayMemberBinding="{Binding Path=WZORZEC}"/>
                                <GridViewColumn Width="100" Header="Usługa" DisplayMemberBinding="{Binding Path=USLUGA}" />
                                <GridViewColumn Width="100" Header="Pracownik" DisplayMemberBinding="{Binding Path=PRACOWNIK}" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock Margin="0,15,0,5" Foreground="Red" FontWeight="Bold">Pozycje Słowników:</TextBlock>
                <ListView x:Name="Items_Right" Height="200" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Element" Width="320" DisplayMemberBinding="{Binding}" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <WrapPanel>
                    <Button x:Name="Set2SelectAllButton" Content="Zaznacz wszystko" 
                            Margin="10" Click="Set2SelectAllButton_Click"/>
                    <Button x:Name="Set2UnSelectAllButton" Content="Odznacz wszystko" 
                            Margin="10" Click="Set2UnSelectAllButton_Click"/>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="Set2AddElementButton" Content="Dodaj pozycję" 
                            Margin="10" />
                    <Button x:Name="Set2EditElementButton" Content="Popraw pozycję" 
                            Margin="10"/>
                    <Button x:Name="Set2RemoveElementButton" Content="Usuń pozycje" 
                            Margin="10"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="2">
                <WrapPanel>
                    <Button Margin="5" Content="Kopiuj Słownik" />
                    <Button Margin="5" Content="Kopiuj Pozycje słownika" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
