<Window x:Class="KSDictionaryEditor.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSDictionaryEditor"
        mc:Ignorable="d"
        Title="Password" Height="176.8" Width="300">

    <StackPanel Margin="30">
        <TextBlock HorizontalAlignment="Center"
                   Margin="0,0,0,10">Podaj hasło do bazy danych:</TextBlock>
        <PasswordBox x:Name="Password" 
                     Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Click="OKButton_Click" Width="60" 
                    Margin="0"/>
            <Button Content="Anuluj" Click="AnulujButton_Click" Width="60"
                    Margin="5,0,0,0"/>
        </StackPanel>
        
    </StackPanel>
</Window>
