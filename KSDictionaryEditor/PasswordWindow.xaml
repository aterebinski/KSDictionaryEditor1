<Window x:Class="KSDictionaryEditor.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSDictionaryEditor"
        mc:Ignorable="d"
        Title="Password" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="0,0,-0.4,190.4">
            <TextBlock HorizontalAlignment="Center">Podaj hasło do bazy danych:</TextBlock>
            <TextBox x:Name="Password" />
            <Button Content="OK" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
