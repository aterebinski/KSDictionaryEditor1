<Window x:Class="KSDictionaryEditor.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSDictionaryEditor"
        mc:Ignorable="d"
        Title="Połączenie z bazą danych" Height="198.293" Width="300">
    <StackPanel Margin="30,30,30,30">
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,10">
            W jaki sposób połączyć się bazą danych?
        </TextBlock>
        <Button Content="Pobierz lokalizację KSPL.ini z rejestru" 
                Margin="0,0,0,10" Click="KSPLfromRegistry_Click"/>
        <Button Content="Wybierz lokalizację KSPL.ini"
                Margin="0,0,0,10" Click="ChooseKSPL_Click"/>
        <Button Content="Podaj własne parametry połączenia"
                Margin="0,0,0,10" Click="EnterConnectionParameters_Click"/>
    </StackPanel>
</Window>
